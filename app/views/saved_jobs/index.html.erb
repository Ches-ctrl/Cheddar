<div class="container">
  <%= form_tag apply_jobs_path, method: :post do %>

    <div class="d-flex align-items-center justify-content-between">
      <h3 id="saved-jobs-index-title">Basket</h3>
    </div>

    <div class="row pt-0">
      <div class="col-9">
          <%= render partial: 'jobs/job_card', collection: @saved_jobs.map(&:job), as: :job, locals: { include_checkboxes: true }%>
      </div>

      <div class="col-3">
          <%= render partial: 'basket' %>
      </div>
    </div>

  <% end %>
</div>
