<div class="container" data-controller="select-by-job-type styling-selected-job">
  <div class="search-container d-flex justify-content-center align-items-center">
    <%= render 'search' %>
  </div>
    <div class="row d-flex justify-content-between" data-controller="job-index-toggle">

      <%# TODO: Fix show more issue where no jobs show up on page load sometimes %>

      <%# LHS Section Divider %>
      <div class="col-sm-3" id="jobs-index-left-section" data-job-index-toggle-target="leftSection">

        <%# LHS Section - Title and Search  %>
        <div class="d-flex justify-content-between bg-white pt-1">
          <h6 id="jobs-index-left-section-title">
            <%= @jobs.count %>
            Jobs
          </h6>
        </div>

        <%# <h5 class="mt-4 mb-3", style="color: #143459;"><i class="fa-regular fa-calendar"></i></i> Date Posted</h5>
        <ul id="job-types-select">
          <div class="job-types-select-item">

            <label for="Last 24 Hours" class="job-types-select-item-label">
            <input class="job-types-select-item-checkbox" type="checkbox" name="Last 24 Hours" id="last 24 hours" data-action="change->select-by-job-type#combinedSearch" data-select-by-job-type-target="date">
            Last 24 Hours
            </label>

            <label for="Last 3 Days" class="job-types-select-item-label">
            <input class="job-types-select-item-checkbox" type="checkbox" name="Last 3 Days" id="last 3 days" data-action="change->select-by-job-type#combinedSearch" data-select-by-job-type-target="date">
            Last 3 Days
            </label>

            <label for="Last 7 Days" class="job-types-select-item-label">
            <input class="job-types-select-item-checkbox" type="checkbox" name="Last 7 Days" id="last 7 days" data-action="change->select-by-job-type#combinedSearch" data-select-by-job-type-target="date">
            Last 7 Days
            </label>

          </div>
        </ul> %>

        <%# <h5 class="mt-4 mb-3", style="color: #143459;"><i class="fa-solid fa-list"></i> Job Playlist</h5>
        <ul id="job-types-select">
          <div class="job-types-select-item">

            <label for="Playlist 1" class="job-types-select-item-label">
            <input class="job-types-select-item-checkbox" type="checkbox" name="Playlist 1" id="Playlist 1" data-action="change->select-by-job-type#combinedSearch" data-select-by-job-type-target="playlist">
            Playlist 1
            </label>

            <label for="Playlist 2" class="job-types-select-item-label">
            <input class="job-types-select-item-checkbox" type="checkbox" name="Playlist 2" id="Playlist 2" data-action="change->select-by-job-type#combinedSearch" data-select-by-job-type-target="playlist">
            Playlist 2
            </label>

            <label for="Playlist 3" class="job-types-select-item-label">
            <input class="job-types-select-item-checkbox" type="checkbox" name="Playlist 3" id="Playlist 3" data-action="change->select-by-job-type#combinedSearch" data-select-by-job-type-target="playlist">
            Playlist 3
            </label>

          </div>
        </ul> %>

        <%# <h5 class="mt-4 mb-3", style="color: #143459;"><i class="fa-solid fa-industry"></i> Industry</h5>
        <h5 class="mt-4 mb-3", style="color: #143459;"><i class="fa-solid fa-location-dot"></i> Location</h5> %>

        <h5 class="mt-4 mb-3", style="color: #143459;"><i class="fa-solid fa-stairs"></i> Seniority</h5>
        <ul id="job-types-select">
          <div class="job-types-select-item">

            <label for="0 - Internship" class="job-types-select-item-label">
              <input class="job-types-select-item-checkbox" type="checkbox" name="Internship" id="Internship" data-action="change->select-by-job-type#combinedSearch" data-select-by-job-type-target="seniority">
              <span>0 - Internship</span>
            </label>

            <label for="1 - Entry Level" class="job-types-select-item-label">
              <input class="job-types-select-item-checkbox" type="checkbox" name="Entry Level" id="Entry Level" data-action="change->select-by-job-type#combinedSearch" data-select-by-job-type-target="seniority">
              <span>1 - Entry Level</span>
            </label>

            <label for="2 - Mid Level" class="job-types-select-item-label">
              <input class="job-types-select-item-checkbox" type="checkbox" name="Mid Level" id="Mid Level" data-action="change->select-by-job-type#combinedSearch" data-select-by-job-type-target="seniority">
              <span>2 - Mid Level</span>
            </label>

            <label for="3 - Senior Level" class="job-types-select-item-label">
              <input class="job-types-select-item-checkbox" type="checkbox" name="Senior Level" id="Senior Level" data-action="change->select-by-job-type#combinedSearch" data-select-by-job-type-target="seniority">
              <span>3 - Senior Level</span>
            </label>

            <label for="4 - Director" class="job-types-select-item-label">
              <input class="job-types-select-item-checkbox" type="checkbox" name="Director" id="Director" data-action="change->select-by-job-type#combinedSearch" data-select-by-job-type-target="seniority">
              <span>4 - Director</span>
            </label>

            <label for="5 - VP" class="job-types-select-item-label">
              <input class="job-types-select-item-checkbox" type="checkbox" name="VP" id="VP" data-action="change->select-by-job-type#combinedSearch" data-select-by-job-type-target="seniority">
              <span>5 - VP</span>
            </label>

            <label for="6 - SVP / Partner" class="job-types-select-item-label">
              <input class="job-types-select-item-checkbox" type="checkbox" name="SVP / Partner" id="SVP / Partner" data-action="change->select-by-job-type#combinedSearch" data-select-by-job-type-target="seniority">
              <span>6 - SVP / Partner</span>
            </label>

          </div>
        </ul>

        <%# TODO: Add icons to individual list items %>
        <%# LHS Section - Search by Job Type %>
        <h5 class="mt-4 mb-3", style="color: #143459;"><i class="fa-solid fa-person-chalkboard"></i> Job Roles</h5>
        <ul id="job-types-select">
          <div class="job-types-select-item">

            <label for="Full Stack" class="job-types-select-item-label">
            <input class="job-types-select-item-checkbox" type="checkbox" name="Full Stack" id="full_stack" <%= "checked " if params[:roles].present? && params[:roles].include?("full_stack") %>data-action="change->select-by-job-type#combinedSearch" data-select-by-job-type-target="role">
            Full Stack
            </label>

            <label for="Back End" class="job-types-select-item-label">
            <input class="job-types-select-item-checkbox" type="checkbox" name="Back End" id="back_end" <%= "checked " if params[:roles].present? && params[:roles].include?("back_end") %>data-action="change->select-by-job-type#combinedSearch" data-select-by-job-type-target="role">
            Back End
            </label>

            <label for="Front End" class="job-types-select-item-label">
            <input class="job-types-select-item-checkbox" type="checkbox" name="Front End" id="front_end" <%= "checked " if params[:roles].present? && params[:roles].include?("front_end") %>data-action="change->select-by-job-type#combinedSearch" data-select-by-job-type-target="role">
            Front End
            </label>

          </div>
        </ul>

        <%# <h5 class="mt-4 mb-3", style="color: #143459;"><i class="fa-solid fa-person-chalkboard"></i> Office Status</h5>
        <ul id="job-types-select">
          <div class="job-types-select-item">

            <li class="job-types-select-item-label">
              <label for="Full Stack">
                <input class="job-types-select-item-checkbox" type="checkbox" name="In Office" id="full stack" data-action="change->select-by-job-type#combinedSearch" data-select-by-job-type-target="role">
                Office-based
              </label>
            </li>

            <li class="job-types-select-item-label">
              <label for="Back End">
                <input class="job-types-sdelect-item-checkbox" type="checkbox" name="Hybrid" id="back end" data-action="change->select-by-job-type#combinedSearch" data-select-by-job-type-target="role">
                Hybrid
              </label>
            </li>

            <li class="job-types-select-item-label">
              <label for="Front End">
                <input class="job-types-select-item-checkbox" type="checkbox" name="Remote" id="front end" data-action="change->select-by-job-type#combinedSearch" data-select-by-job-type-target="role">
                Remote
              </label>
            </li>
          </div>
        </ul> %>
        <h5 class="mt-4 mb-3", style="color: #143459;"><i class="fa-solid fa-earth-americas"></i> Location</h5>
        <ul id="locations-select">
          <div>
            <% @locations.each do |location, count| %>
              <div class="locations-select-item">
                <label for="<%= location %>" class="locations-select-item-label">
                <input class="locations-select-item-checkbox" type="checkbox" name="<%= location %>" id="<%= location.split(', ').first.downcase.gsub(' ', '_') %>" <%= "checked " if params[:locations].present? && params[:locations].include?(location.split(', ').first.downcase.gsub(' ', '_')) %> data-action="change->select-by-job-type#combinedSearch" data-select-by-job-type-target="location">
                <%= "#{location} (#{count})" %>
                </label><br>
              </div>
            <% end %>
          </div>
        </ul>
        <%# TODO: Add icons to individual list item %>
        <h5 class="mt-4 mb-3", style="color: #143459;"><i class="fa-solid fa-building-user"></i> Companies</h5>
        <ul id="companies-select">
          <div>
            <% @companies.each do |company, count| %>
              <div class="companies-select-item">
                <label for="<%= company.company_name %>" class="companies-select-item-label">
                <input class="companies-select-item-checkbox" type="checkbox" name="<%= company.company_name %>" id="<%= company.id %>" <%= "checked " if params[:companies].present? && params[:companies].include?(company.id.to_s) %> data-action="change->select-by-job-type#combinedSearch" data-select-by-job-type-target="company">
                <%= "#{company.company_name} (#{count})" %>
                </label><br>
              </div>
            <% end %>
          </div>
        </ul>

      </div>

      <%# RHS Section Divider %>
      <div class="col-sm-9 p-0" id="jobs-index-right-section" data-job-index-toggle-target="rightSection">
        <%= form_tag apply_jobs_path, method: :post do %>
          <div class="sticky-top bg-white">
            <div class="d-flex justify-content-between align-items-center pt-1">
              <div class="d-flex align-items-center cursor-pointer" data-action="click->job-index-toggle#toggleView" data-job-index-toggle-target="toggleButton1">
                <i class="fa-solid fa-circle-left"></i>
                <p class="my-0 ms-1">Hide Categories</p>
              </div>
              <div class="d-flex align-items-center d-none cursor-pointer" data-action="click->job-index-toggle#toggleView" data-job-index-toggle-target="toggleButton2">
                <i class="fa-solid fa-circle-right"></i>
                <p class="my-0 ms-1">Show Categories</p>
              </div>
              <div>
                <%= submit_tag "Shortlist 0 Jobs", id: "apply-button", "data": {job_index_toggle_target: "applyButton"}, class: "btn btn-apply" %>
              </div>
            </div>

            <%# RHS Section - Job Table Headers %>
            <div class="row">
              <div class="col-12">
                <div class="card job-list-header">
                  <div class="card-body">
                    <div class="row text-center">
                      <%# <div class="col">Company</div> %>
                      <div class="col">Company & Role</div>
                      <div class="col-2 d-none" data-job-index-toggle-target="newColumn1">Description</div>
                      <div class="col-2">Job Details</div>
                      <div class="col-2">Climate Impact</div>
                      <div class="col-2">App Criteria</div>
                      <%# <div class="col">Details</div> %>
                      <%# <div class="col">Save</div> %>
                      <div class="col-2">Select</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <%# RHS Section - Job Table %>
          <div class="job-cards-container pt-0" data-controller="load-more">

            <%# Placeholders whilst the jobs cards load %>
            <% if @initial_jobs.blank? %>
              <% 10.times do %>
              <%# TODO: At the moment, placeholder will not show as @initial_jobs is always true %>
                <%= render 'placeholder' %>
              <% end %>
            <% else %>
              <%# Actual job content here %>
              <%# Once the actual content is loaded, it should replace the placeholders %>
              <% @initial_jobs.each do |job| %>
                  <%= render 'row', job: job %>
              <% end %>
              <div class="digg_pagination">
                <div class="page_info">
                  <%= page_entries_info @initial_jobs %>
                </div>
                <%= will_paginate @initial_jobs, container: false %>
              </div>
              <div data-load-more-target="remaining" class="d-none">
                <% @remaining_jobs.each do |job| %>
                  <%= render 'row', job: job %>
                <% end %>
              </div>
              <div class="d-flex justify-content-start">
                <%= link_to "Show More", "#", data: { action: "click->load-more#showMore" }, class: "btn btn-apply", "data-load-more-target": "button" %>
              </div>
            <% end %>
          </div>
        <% end %>
    </div>
  </div>
</div>
