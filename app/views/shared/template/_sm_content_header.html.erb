<%# Cheddar Logo - Small %>
<div class="flex items-center gap-5 lg:hidden">
  <button type="button" class="flex h-6 w-6 items-center justify-center rounded-md transition hover:bg-zinc-900/5 dark:hover:bg-white/5" aria-label="Toggle navigation" data-action="click->mobile-nav#toggle">
    <%= inline_svg_tag('template/icons/hamburger_menu.svg') %>
  </button>
  <%= link_to opportunities_path, class: "flex h-6 w-24 items-center" do %>
    <%= inline_svg_tag('cheddar_logo_text_light.svg', class: "dark:hidden") %>
    <%= inline_svg_tag('cheddar_logo_text_dark.svg', class: "hidden dark:block") %>
  <% end %>
</div>
<div class="absolute inset-x-0 top-full h-px transition bg-zinc-900/7.5 dark:bg-white/7.5"></div>

<%# Search Area %>
<div class="flex items-center gap-5">
  <%# Separator %>
  <div class="hidden md:block md:h-5 md:w-px md:bg-zinc-900/10 md:dark:bg-white/15"></div>

  <%# Search Icon - Small %>
  <div class="flex gap-4">
    <div class="contents lg:hidden">
      <button type="button" class="flex h-6 w-6 items-center justify-center rounded-md transition hover:bg-zinc-900/5 ui-not-focus-visible:outline-none lg:hidden dark:hover:bg-white/5" aria-label="Find something..." data-action="click->search#showSearch">
        <%= inline_svg_tag('template/icons/search.svg') %>
      </button>
    </div>

    <%# Light / Dark Mode %>
    <button type="button" class="flex h-6 w-6 items-center justify-center rounded-md transition hover:bg-zinc-900/5 dark:hover:bg-white/5" aria-label="Switch to light theme" data-action="click->theme#toggleTheme">
      <%= inline_svg_tag('template/icons/sun.svg') %>
      <%= inline_svg_tag('template/icons/moon.svg') %>
    </button>
  </div>

  <%# Login Buttons %>
  <% if Flipper.enabled?(:log_in_buttons) %>
    <div class="hidden min-[416px]:contents">
      <% if current_user %>
        <%= link_to saved_jobs_path, class: "flex h-6 w-6 items-center justify-center rounded-md transition hover:bg-zinc-900/5 dark:hover:bg-white/5" do %>
          <svg class="size-5 flex-shrink-0 text-gray-400 stroke-zinc-900 dark:stroke-white dark:text-gray-99 group-hover:text-gray-500 dark:group-hover:text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 00-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 00-16.536-1.84M7.5 14.25L5.106 5.272M6 20.25a.75.75 0 11-1.5 0 .75.75 0 011.5 0zm12.75 0a.75.75 0 11-1.5 0 .75.75 0 011.5 0z"></path>
          </svg>
        <% end %>
        <%= render 'shared/template/layout/profile_dropdown' %>
      <% else %>
        <%= link_to "Log in", new_user_session_path, class: "inline-flex gap-0.5 justify-center overflow-hidden text-sm font-medium transition rounded-full py-1 px-3 text-white dark:text-mauve-400 bg-zinc-900 dark:bg-mauve-400/10 hover:bg-zinc-700 dark:hover:bg-mauve-400/10 dark:ring-1 dark:ring-inset dark:ring-mauve-400/20 dark:hover:text-mauve-300 dark:hover:ring-mauve-300" %>
        <%= link_to "Sign up", new_user_registration_path, class: "inline-flex gap-0.5 justify-center overflow-hidden text-sm font-medium transition rounded-full py-1 px-3 text-zinc-700 ring-1 ring-inset ring-zinc-900/10 hover:bg-zinc-900/2.5 hover:text-zinc-900 dark:text-zinc-400 dark:ring-white/10 dark:hover:bg-white/5 dark:hover:text-white" %>
      <% end %>
    </div>
  <% end %>
</div>
