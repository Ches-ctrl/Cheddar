<div class="xl:sticky xl:top-1/3 xl:-mr-6 xl:block xl:h-[calc(100vh-4.75rem)] xl:flex-none xl:overflow-y-auto xl:py-0 xl:pr-6">
  <ul role="list" class="pe-20">
    <li>
      <div class="relative pb-8 pt-2">
        <span class="absolute right-4 top-4 -ml-px h-full w-0.5 bg-gray-200 dark:bg-gray-600" aria-hidden="true"></span>
        <%= link_to application_process_path(@application_process), class: "relative flex space-x-3" do %>
          <div class="relative flex space-x-3">
            <div class="flex min-w-0 flex-1 justify-end text-right space-x-4 pt-1.5">
              <div>
                <p class="text-sm text-gray-500 dark:text-gray-400">Common fields</a></p>
              </div>
            </div>
            <div>
              <% if current_application_step?("common_fields") %>
                <span class="flex h-8 w-8 items-center justify-center rounded-full bg-gray-400 ring-8 ring-transparent">
                  <svg class="size-5 text-white dark:text-gray-900 dark:text-white" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M4.5 5.653c0-1.427 1.529-2.33 2.779-1.643l11.54 6.347c1.295.712 1.295 2.573 0 3.286L7.28 19.99c-1.25.687-2.779-.217-2.779-1.643V5.653Z" clip-rule="evenodd" />
                  </svg>                
                </span>
              <% elsif application_step_completed?("common_fields") %>
                <span class="flex h-8 w-8 items-center justify-center rounded-full bg-green-500 ring-8 ring-transparent">
                  <svg class="h-5 w-5 text-white dark:text-gray-900 dark:text-white" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
                  </svg>
                </span>
              <% elsif application_step_unstarted?("common_fields") %>
                <span class="flex h-8 w-8 items-center justify-center rounded-full bg-gray-200 dark:bg-gray-600 ring-8 ring-transparent"></span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </li>
    <% @application_process.job_applications.each do |job_application| %>
      <% job = job_application.job %>
      <li>
        <div class="relative pb-8">
          <span class="absolute right-4 top-4 -ml-px h-full w-0.5 bg-gray-200 dark:bg-gray-600" aria-hidden="true"></span>
          <%= link_to edit_application_process_job_application_path(@application_process, @application_process.find_application_for_job(job)), class: "relative flex space-x-3" do %>
            <div class="flex min-w-0 flex-1 justify-end text-right space-x-4 pt-1.5">
              <div>
                <p class="text-sm text-gray-500 dark:text-gray-400">
                  <%= job.title %><br/>
                  <span class="font-medium text-gray-900 dark:text-white">
                    <%= job.company.name %>
                  </span>
                </p>
              </div>
            </div>
            <% if current_application_step?(job_application.id) %>
              <span class="flex h-8 w-8 items-center justify-center rounded-full bg-gray-400 ring-8 ring-transparent">
                <svg class="size-5 text-white dark:text-gray-900 dark:text-white" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M4.5 5.653c0-1.427 1.529-2.33 2.779-1.643l11.54 6.347c1.295.712 1.295 2.573 0 3.286L7.28 19.99c-1.25.687-2.779-.217-2.779-1.643V5.653Z" clip-rule="evenodd" />
                </svg>                
              </span>
            <% elsif application_step_completed?(job_application.id) %>
              <span class="flex h-8 w-8 items-center justify-center rounded-full bg-green-500 ring-8 ring-transparent">
                <svg class="h-5 w-5 text-white dark:text-gray-900 dark:text-white" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
                </svg>
              </span>
            <% elsif application_step_unstarted?(job_application.id) %>
              <span class="flex h-8 w-8 items-center justify-center rounded-full bg-gray-200 dark:bg-gray-600 ring-8 ring-transparent"></span>
            <% end %>
          <% end %>
        </div>
      </li>
    <% end %>
    <li>
      <div class="relative pb-8">
        <span class="absolute right-4 top-4 -ml-px h-full w-0.5" aria-hidden="true"></span>
        <%= link_to application_process_overview_path(@application_process), class: "relative flex space-x-3" do %>
          <div class="flex min-w-0 flex-1 justify-end text-right space-x-4 pt-1.5">
            <div>
              <p class="text-sm text-gray-500 dark:text-gray-400">
                <span class="font-medium text-gray-900 dark:text-white">
                  Overview
                </span>
              </p>
            </div>
          </div>
          <div>
            <% if current_application_step?("overview") %>
              <span class="flex h-8 w-8 items-center justify-center rounded-full bg-gray-400 ring-8 ring-transparent">
                <svg class="size-5 text-white dark:text-gray-900 dark:text-white" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M4.5 5.653c0-1.427 1.529-2.33 2.779-1.643l11.54 6.347c1.295.712 1.295 2.573 0 3.286L7.28 19.99c-1.25.687-2.779-.217-2.779-1.643V5.653Z" clip-rule="evenodd" />
                </svg>                
              </span>
            <% elsif application_step_completed?("overview") %>
              <span class="flex h-8 w-8 items-center justify-center rounded-full bg-green-500 ring-8 ring-transparent">
                <svg class="h-5 w-5 text-white dark:text-gray-900 dark:text-white" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
                </svg>
              </span>
            <% elsif application_step_unstarted?("overview") %>
              <span class="flex h-8 w-8 items-center justify-center rounded-full bg-gray-200 dark:bg-gray-600 ring-8 ring-transparent"></span>
            <% end %>
          </div>
        <% end %>
      </div>
    </li>
  </ul>
</div>
