<%
  set_meta_tags(
    title: "Find the best jobs",
    description: "Discover and apply to thousands of jobs with Cheddar's one-click application process.",
    keywords: "Job search results page, SERP, job listings, job index page, job opportunities"
  )
%>
<article class="h-full flex flex-col pb-10 pt-8">
  <div class="inline-flex">
    <%= render '/shared/template/layout/saved_search_button' if current_user.admin? %>
    <%= render '/shared/template/layout/sort_dropdown' %>
  </div>
  <ul role="list" class="divide-y divide-gray-100 dark:divide-gray-800">
    <!-- #rename later to jobs for jobs/_job.html.erb -->
    <% @records.each do |opportunity| %>
      <%= render 'opportunities/opportunity', opportunity: %>
    <% end %>
  </ul>
  <%= render 'shared/template/pagination', pagy: @pagy %>
</article>
