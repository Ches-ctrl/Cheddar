<div class="flex min-h-full flex-col justify-center py-12 sm:px-6 lg:px-8 ">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-6 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900 dark:text-white">
      Ready to get hired?
    </h2>
    <p class="mt-5 text-center text-sm text-gray-500 dark:text-gray-400">
      Quickly find and apply to thousands of jobs in one-click.
    </p>
  </div>
  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-[480px]">
    <div class="bg-white/5 dark:bg-zinc-900/10 ring-1 ring-indigo-500 rounded-xl px-6 py-12 shadow sm:rounded-lg sm:px-12">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'space-y-6' }) do |f| %>
        <div>
          <label for="first_name" class="block text-sm font-medium leading-6 text-gray-900 dark:text-white">First name</label>
          <div class="mt-2">
            <%= f.input :first_name,
              required: true,
              autofocus: true,
              label: false,
              input_html: { autocomplete: "first_name", class: "block w-full rounded-md border-0 py-1.5 dark:bg-white/5 text-gray-900 dark:text-white shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-white/10 placeholder:text-gray-400 dark:placeholder:text-gray-99 focus:ring-1 focus:ring-inset focus:ring-indigo-600 dark:focus:ring-indigo-500 sm:text-sm sm:leading-6" }
            %>
          </div>
        </div>
        <div>
          <label for="last_name" class="block text-sm font-medium leading-6 text-gray-900 dark:text-white">Last name</label>
          <div class="mt-2">
            <%= f.input :last_name,
              required: true,
              autofocus: false,
              label: false,
              input_html: { autocomplete: "last_name", class: "block w-full rounded-md border-0 py-1.5 dark:bg-white/5 text-gray-900 dark:text-white shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-white/10 placeholder:text-gray-400 dark:placeholder:text-gray-99 focus:ring-1 focus:ring-inset focus:ring-indigo-600 dark:focus:ring-indigo-500 sm:text-sm sm:leading-6" }
            %>
          </div>
        </div>
        <div>
          <label for="email" class="block text-sm font-medium leading-6 text-gray-900 dark:text-white">Email address</label>
          <div class="mt-2">
            <%= f.input :email,
              required: true,
              autofocus: false,
              label: false,
              input_html: { autocomplete: "email", class: "block w-full rounded-md border-0 py-1.5 dark:bg-white/5 text-gray-900 dark:text-white shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-white/10 placeholder:text-gray-400 dark:placeholder:text-gray-99 focus:ring-1 focus:ring-inset focus:ring-indigo-600 dark:focus:ring-indigo-500 sm:text-sm sm:leading-6" }
            %>
          </div>
        </div>
        <div>
          <label for="password" class="block text-sm font-medium leading-6 text-gray-900 dark:text-white">Password</label>
          <div class="mt-2">
            <%= f.input :password,
              required: true,
              autofocus: false,
              label: false,
              input_html: { autocomplete: "new-password", class: "block w-full rounded-md border-0 py-1.5 dark:bg-white/5 text-gray-900 dark:text-white shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-white/10 placeholder:text-gray-400 dark:placeholder:text-gray-99 focus:ring-1 focus:ring-inset focus:ring-indigo-600 dark:focus:ring-indigo-500 sm:text-sm sm:leading-6" }
            %>
          </div>
        </div>
        <div>
          <label for="password_confirmation" class="block text-sm font-medium leading-6 text-gray-900 dark:text-white">Password confirmation</label>
          <div class="mt-2">
            <%= f.input :password_confirmation,
              required: true,
              autofocus: false,
              label: false,
              input_html: { autocomplete: "new-password", class: "block w-full rounded-md border-0 py-1.5 dark:bg-white/5 text-gray-900 dark:text-white shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-white/10 placeholder:text-gray-400 dark:placeholder:text-gray-99 focus:ring-1 focus:ring-inset focus:ring-indigo-600 dark:focus:ring-indigo-500 sm:text-sm sm:leading-6" }
            %>
          </div>
        </div>
        <div>
          <%= f.button :submit, "Sign up", class: "flex w-full justify-center cursor-pointer rounded-md !bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white dark:text-gray-900 shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
        </div>
        <p class="mt-10 text-left text-sm text-gray-500 dark:text-gray-400">
          By signing up you agree to our 
          <%= link_to "Terms and Conditions", "/#", class: "font-semibold leading-6 text-indigo-600 dark: text-indigo-400 hover:text-indigo-500 dark:hover:text-indigo-300" %>
          and 
          <%= link_to "Privacy Policy", "/#", class: "font-semibold leading-6 text-indigo-600 dark: text-indigo-400 hover:text-indigo-500 dark:hover:text-indigo-300" %>
        </p>  
      <% end %>
  </div>
</div>