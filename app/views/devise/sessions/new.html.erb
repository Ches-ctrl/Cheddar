<div class="flex min-h-full flex-col justify-center py-12 sm:px-6 lg:px-8 ">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-6 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900 dark:text-white">
      Let's get you hired
    </h2>
    <p class="mt-5 text-center text-sm text-gray-500 dark:text-gray-400">
      Apply to thousands of jobs in one-click and track your status.
    </p>
  </div>
  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-[480px]">
    <div class="bg-white/5 dark:bg-zinc-900/10 ring-1 ring-indigo-500 rounded-xl px-6 py-12 shadow sm:rounded-lg sm:px-12">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'space-y-6' }) do |f| %>
        <div>
          <label for="email" class="block text-sm font-medium leading-6 text-gray-900 dark:text-white">Email address</label>
          <div class="mt-2">
            <%= f.input :email,
              required: true,
              autofocus: true,
              label: false,
              input_html: { autocomplete: "email", class: "block w-full rounded-md border-0 py-1.5 dark:bg-white/5 text-gray-900 dark:text-white shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-white/10 placeholder:text-gray-400 dark:placeholder:text-gray-99 focus:ring-1 focus:ring-inset focus:ring-indigo-600 dark:focus:ring-indigo-500 sm:text-sm sm:leading-6" }
            %>
          </div>
        </div>
        <div>
          <label for="password" class="block text-sm font-medium leading-6 text-gray-900 dark:text-white">Password</label>
          <div class="mt-2">
            <%= f.input :password,
              required: true,
              autofocus: false,
              label: false,
              input_html: { autocomplete: "current-password", class: "block w-full rounded-md border-0 py-1.5 dark:bg-white/5 text-gray-900 dark:text-white shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-white/10 placeholder:text-gray-400 dark:placeholder:text-gray-99 focus:ring-1 focus:ring-inset focus:ring-indigo-600 dark:focus:ring-indigo-500 sm:text-sm sm:leading-6" }
            %>
          </div>
        </div>
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <%= f.input :remember_me,
              as: :boolean,
              type: :checkbox,
              required: false,
              autofocus: false,
              label: false,
              input_html: { class: "mt-2 h-4 w-4 rounded border-gray-300 dark:text-gray-700 text-indigo-600 focus:ring-indigo-600", checked: true } if devise_mapping.rememberable? %>
            <label for="remember-me" class="ml-3 block text-sm leading-6 text-gray-900 dark:text-white">Remember me</label>
          </div>
          <div class="text-sm leading-6">
            <%= link_to "Forgot password?", new_user_password_path, class: "font-semibold text-indigo-600 hover:text-indigo-500" %>
          </div>
        </div>
        <div>
          <%= f.button :submit, "Log in", class: "flex w-full justify-center cursor-pointer rounded-md !bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white dark:text-gray-900 shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
        </div>
      <% end %>
      <div>
        <div class="relative mt-10">
          <div class="absolute inset-0 flex items-center" aria-hidden="true">
            <div class="w-full border-t border-gray-200 dark:border-gray-800"></div>
          </div>
          <div class="relative flex justify-center text-sm font-medium leading-6">
            <span class="bg-white dark:bg-zinc-900 px-6 text-gray-900 dark:text-white">Or continue with</span>
          </div>
        </div>
        <div class="mt-6 grid grid-cols-2 gap-4">
          <a href="#" class="flex w-full items-center justify-center gap-3 rounded-md bg-white dark:bg-white/10 px-3 py-2 text-sm font-semibold text-gray-900 dark:text-white shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 dark:hover:bg-white/20 focus-visible:ring-transparent">
            <svg class="h-5 w-5" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M12.0003 4.75C13.7703 4.75 15.3553 5.36002 16.6053 6.54998L20.0303 3.125C17.9502 1.19 15.2353 0 12.0003 0C7.31028 0 3.25527 2.69 1.28027 6.60998L5.27028 9.70498C6.21525 6.86002 8.87028 4.75 12.0003 4.75Z" fill="#EA4335" />
              <path d="M23.49 12.275C23.49 11.49 23.415 10.73 23.3 10H12V14.51H18.47C18.18 15.99 17.34 17.25 16.08 18.1L19.945 21.1C22.2 19.01 23.49 15.92 23.49 12.275Z" fill="#4285F4" />
              <path d="M5.26498 14.2949C5.02498 13.5699 4.88501 12.7999 4.88501 11.9999C4.88501 11.1999 5.01998 10.4299 5.26498 9.7049L1.275 6.60986C0.46 8.22986 0 10.0599 0 11.9999C0 13.9399 0.46 15.7699 1.28 17.3899L5.26498 14.2949Z" fill="#FBBC05" />
              <path d="M12.0004 24.0001C15.2404 24.0001 17.9654 22.935 19.9454 21.095L16.0804 18.095C15.0054 18.82 13.6204 19.245 12.0004 19.245C8.8704 19.245 6.21537 17.135 5.2654 14.29L1.27539 17.385C3.25539 21.31 7.3104 24.0001 12.0004 24.0001Z" fill="#34A853" />
            </svg>
            <span class="text-sm font-semibold leading-6">Google</span>
          </a>

          <a href="#" class="flex w-full items-center justify-center gap-3 rounded-md bg-white dark:bg-white/10 px-3 py-2 text-sm font-semibold text-gray-900 dark:text-white shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 dark:hover:bg-white/20 focus-visible:ring-transparent">
            <!-- # TODO : size to improve  -->
            <%= inline_svg_tag("template/icons/logos/github.svg") %>
            <span class="text-sm font-semibold leading-6">GitHub</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
